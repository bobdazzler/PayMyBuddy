ENGINE = InnoDB
AUTO_INCREMENT = 3
DEFAULT CHARACTER SET = utf8mb4
COLLATE = utf8mb4_0900_ai_ci;


-- -----------------------------------------------------
-- Table `paymybuddy`.`transaction`
-- -----------------------------------------------------
CREATE TABLE IF NOT EXISTS `paymybuddy`.`transaction` (
  `id` INT NOT NULL AUTO_INCREMENT,
  `created_at` DATETIME NULL DEFAULT NULL,
  `reciever_id` INT NULL DEFAULT NULL,
  `user_id` INT NULL DEFAULT NULL,
  `amout` DOUBLE NULL DEFAULT NULL,
  `description` VARCHAR(100) NULL DEFAULT NULL,
  `charges` DOUBLE NULL DEFAULT NULL,
  `updated_at` DATETIME NULL DEFAULT NULL,
  PRIMARY KEY (`id`),
  INDEX `reciever_id_idx` (`reciever_id` ASC) VISIBLE,
  CONSTRAINT `reciever_id`
    FOREIGN KEY (`reciever_id`)
    REFERENCES `paymybuddy`.`connection` (`id`),
  CONSTRAINT `sender_id`
    FOREIGN KEY (`id`)
    REFERENCES `paymybuddy`.`user` (`id`))
ENGINE = InnoDB
DEFAULT CHARACTER SET = utf8mb4
COLLATE = utf8mb4_0900_ai_ci;


